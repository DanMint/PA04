<div class="card">
    <div class="card-body">
      <h5 class="card-title">Transaction Details</h5>
      <pre><%= JSON.stringify(item, null, 2) %></pre>
      <form method="post" action="/transact/updateTransaction">
        <div class="form-group">
          <input type="hidden" name="id" value="<%= item._id %>">
          <label for="description">Description</label>
          <input type="text" class="form-control" name="description" value="<%= item.description %>">
        </div>
        <div class="form-group">
          <label for="amount">Amount</label>
          <input type="number" class="form-control" name="amount" value="<%= item.amount %>">
        </div>
        <div class="form-group">
          <label for="category">Category</label>
          <input type="text" class="form-control" name="category" value="<%= item.category %>">
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" class="form-control" name="date" value="<%= item.date %>">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
  